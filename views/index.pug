extends layout

block content
  h1= title
  p Welcome to #{title}. Enter the name of the artist you want to find.
  form(action='/search_artist', method='POST')
    p
      | Artist you are looking for: 
      input(name='artist', value='', type='text')
      | Filename: 
      input(name='fileName', value='result', type='text')
    p 
      | How many results should be shown per page? (Results of 10 pages will be shown): 
      input(name='limit', value='100', type='number')
    input(value='Submit', type='submit')
